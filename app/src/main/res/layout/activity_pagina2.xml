<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".Pagina2">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:gravity="center"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            app:srcCompat="@drawable/image1"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cabeza"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="278dp"
                android:layout_marginTop="100dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/image3" />

            <ImageView
                android:id="@+id/cuerpo"
                android:layout_width="40dp"
                android:layout_height="120dp"
                android:layout_marginLeft="295dp"
                android:layout_marginTop="165dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/image5" />

            <ImageView
                android:id="@+id/brazoizquierdo"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="160dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/image4" />

            <ImageView
                android:id="@+id/brazoderecho"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="305dp"
                android:layout_marginTop="165dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/image2" />

            <ImageView
                android:id="@+id/piernaizquierda"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="280dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/image2" />

            <ImageView
                android:id="@+id/piernaderecha"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="310dp"
                android:layout_marginTop="280dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/image4" />

        </FrameLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/palabras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:gravity="center"/>

    <GridView
            android:id="@+id/letras"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:numColumns="7"
            android:padding="5dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:layout_marginLeft="150dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tiempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:layout_marginLeft="1dp"
            android:visibility="invisible"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/miBoton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:text="Nuevo Juego" />


    </LinearLayout>



</LinearLayout>